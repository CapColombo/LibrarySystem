@{
    ViewBag.Title = "Авторизация";
}

@model LibrarySystem.Models.ViewModels.LoginModel

<div class="container-fluid" style="max-width: 500px;">
<h3 class="text-center text-primary">Вход на сайт</h3>

<form asp-action="Login" asp-controller="Account" asp-antiforgery="true">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="mt-2">
            <label class="form-label">Введите Логин</label>
            <input type="text" asp-for="Login" class="form-control" />
            <span class="text-danger" asp-validation-for="Login"></span>
        </div>
        <div class="mt-2">
            <label class="form-label">Введите Пароль</label>
            <input type="password" asp-for="Password" class="form-control" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="text-center mt-2">
            <input class="btn btn-primary" type="submit" value="Войти"/>
            <a class="btn btn-primary" asp-action="Register" asp-controller="Account">Регистрация</a>
        </div>
    </div>
</form>
</div>
